#define SBAR_POSITION_AND_SCALE(pos,scale,size_from,size_to, bg) \
	if (size_to == '0 0 0') \
		pos = sbar_position(pos, size_from * scale, bg); \
	else { \
		vector v = sbar_scale_for_position(pos, size_from, size_to); \
		scale = v_z; \
		pos##_x += v_x; \
		pos##_y += v_y; \
		pos##_z = 0; \
	}
